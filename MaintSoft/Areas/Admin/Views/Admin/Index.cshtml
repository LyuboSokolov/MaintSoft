@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> manufacturers, spare parts and machines.

    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> and <b>assets</b><b> and change them</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="AppTask" asp-action="All"
       class="btn btn-primary btn-lg">Tasks</a>

    <a asp-area="" asp-controller="SparePart" asp-action="All"
       class="btn btn-primary btn-lg">Spare Parts</a>

    <a asp-area="" asp-controller="Machine" asp-action="All"
       class="btn btn-primary btn-lg">Machines</a>

    <a asp-area="" asp-controller="Manufacturer" asp-action="All"
       class="btn btn-primary btn-lg">Manufacturers</a>

    <a asp-area="" asp-controller="Asset" asp-action="All"
       class="btn btn-primary btn-lg">Assets</a>

    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>

