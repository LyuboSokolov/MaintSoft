@model IEnumerable<ManufacturerViewModel>

@{
    ViewBag.Title = "Task List";
}
<a class="nav-link text-dark" asp-area="" asp-controller="AppTask" asp-action="Add">Add Task</a>
@if (Model.LongCount() == 0)
{
    <div> Not Yet Task</div>
}
else
{

    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>Manufacturer</th>
            <th>VAT</th>
            <th>Contacts</th>
            <th>Address</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var manufacturer in Model)
        {
            <tr>
                <td>@manufacturer.Name</td>
                <td>@manufacturer.VAT</td>
                <td>@manufacturer.Contacts</td>
                <td>@manufacturer.Address</td>
                <td>@manufacturer.Description</td>

                <td>
                    <form class="input-group-sm" asp-route-manufacturerId="@manufacturer.Id"  asp-controller="AppTask" asp-action="Details" method="post">
                        <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>
                </td>
                <td>
                    <form class="input-group-sm" asp-route-manufacturerId="@manufacturer.Id" asp-controller="AppTask" asp-action="Delete" method="post">
                        <input type="submit" value="Detele" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>
                </td>
            </tr>
        }

    </table>
}