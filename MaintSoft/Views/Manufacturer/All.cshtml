@model IEnumerable<ManufacturerViewModel>

@{
    ViewBag.Title = "Manifacturers";
}
<a class="btn btn-success" style="margin-bottom: 10px" asp-area="" asp-controller="Manufacturer" asp-action="Add">Add Manufacturer</a>
@if (Model.LongCount() == 0)
{
    <div> Not Yet Manufacturer</div>
}
else
{

    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>Manufacturer</th>
            <th>VAT</th>
            <th>Contacts</th>
            <th>Address</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var manufacturer in Model)
        {
            <tr>
                <td>@manufacturer.Name</td>
                <td>@manufacturer.VAT</td>
                <td>@manufacturer.Contacts</td>
                <td>@manufacturer.Address</td>
                <td>@manufacturer.Description</td>

                <td>
                    <a class="btn btn-warning" asp-controller="Manufacturer" asp-action="Edit"
               asp-route-manufacturerId="@manufacturer.Id">Edit</a>

                    @*   <form class="input-group-sm"  asp-controller="Manufacturer" asp-action="Edit" method="post" asp-route-manufacturerId="@manufacturer.Id">
            <input type="submit" value="Edit" class="fs-6 btn btn-success mb-3 p-2" />
            </form>*@
                </td>
                <td>
                    @*<form class="input-group-sm" asp-route-manufacturerId="@manufacturer.Id" asp-controller="Manufacturer" asp-action="Delete"S>
            <input type="submit" value="Detele" class="fs-6 btn btn-success mb-3 p-2" />
            </form>*@
                    <a class="ml-2 btn btn-danger" asp-controller="Manufacturer" asp-action="Delete"
               asp-route-manufacturerId="@manufacturer.Id">Delete</a>
                </td>
            </tr>
        }

    </table>
}