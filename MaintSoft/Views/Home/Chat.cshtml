@model ApplicationUser
@{
    ViewData["Title"] = "Online Chat";
}


<h1 style="color:white">@ViewData["Title"]</h1>
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row" hidden>
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" value="@Model.FirstName @Model.LastName" /></div>
    </div>
    <div class="row">
        <div style="font-size:24px;color:white"> Message</div>
        <div><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input class="btn btn-primary" type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6" id="message-container">
        <ul id="messagesList"></ul>
    </div>
</div>
@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}

