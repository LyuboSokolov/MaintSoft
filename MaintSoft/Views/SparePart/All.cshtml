@model IEnumerable<SparePartAllViewModel>

@{
    ViewBag.Title = "Spare Parts";
}
<a class="btn btn-success" style ="margin-bottom: 10px" asp-area="" asp-controller="SparePart" asp-action="Add">Add Spare Part</a>
@if (Model.LongCount() == 0)
{
    <h3> Not Yet Spare Part</h3>
}
else
{

    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Location</th>
            <th>Picture</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var sparePart in Model)
        {
            <tr>
                <td>@sparePart.Name</td>
                <td>@sparePart.Code</td>
                <td>@sparePart.Quantity</td>
                <td>@sparePart.Description</td>
                <td>@sparePart.Location</td>
                <td> <img src="@sparePart.ImageUrl" height="64" width="64" /></td>

                <td>
                    <a class="btn btn-warning" asp-controller="SparePart" asp-action="Edit"
               asp-route-sparePartId="@sparePart.Id">Edit</a>
                </td>
                <td>
                    <form class="input-group-sm" asp-route-sparePartId="@sparePart.Id" asp-controller="SparePart" asp-action="Delete" method="post">
                        <input type="submit" value="Delete" class="fs-6 btn btn-danger mb-3 p-2" />
                    </form>
                </td>
            </tr>
        }

    </table>
}
